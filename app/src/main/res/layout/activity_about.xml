<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    tools:context="com.example.christian.creativecitymapp.AboutActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="39dp"
                android:text="ABOUT CREATIVE CITY"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_below="@+id/Title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="30dp"
                app:srcCompat="@drawable/sample" />

            <TextView
                android:id="@+id/subTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="17dp"
                android:text="We work with friends across Greater Manchester to encourage creative leadership and community-led innovaton."
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="60sp"
                android:layout_marginTop="21dp"
                android:text="We love our city - it's a buzzing, creative, self-driven community of artists, instigators, activists, hobbyists and empowered citizens of the world. It's a glorious place to be!"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="60sp"
                android:layout_marginTop="21dp"
                android:text="But such wonder needs nurturing. Newcomers need welcoming, movements need resourcing, and even our most well connected, well informed and resilient change-makers need some support too!"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="60sp"
                android:layout_marginTop="21dp"
                android:text="We do our bit to help by:â€‹

- running empowering community art projects and events.
- backing creative social justice campaigns.
- connecting and investing in creative change-makers.
- delivering 'arts for community development' consultancy work and project management."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="60sp"
                android:layout_marginTop="21dp"
                android:text="We can't do it alone though. We work hand-in-hand with a thriving community of organisations and community groups."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text4"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="60sp"
                android:layout_marginTop="21dp"
                android:text="We work particularly closely with our three sister organisations who help ensure some of the city's most important, but normally least heard, voices are at the forefront of our work."
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/imgTakeUp"
                style="@android:style/Widget.Holo.Light.ImageButton"
                android:layout_width="80sp"
                android:layout_height="100sp"
                android:layout_below="@+id/text5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/takeup" />

            <ImageButton
                android:id="@+id/imgSoap"
                style="@android:style/Widget.ImageButton"
                android:layout_width="80sp"
                android:layout_height="100sp"
                android:layout_alignStart="@+id/text5"
                android:layout_below="@+id/text5"
                android:layout_marginStart="28dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/soap" />

            <ImageButton
                android:id="@+id/imgRoar"
                style="@android:style/Widget.Holo.ImageButton"
                android:layout_width="80sp"
                android:layout_height="100sp"
                android:layout_alignEnd="@+id/subTitle"
                android:layout_below="@+id/text5"
                android:layout_marginStart="28dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/roar" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
